<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <%-include('sematic-ui')%>
</head>

<body>
    <!-- sidebar -->
    <%-include('lecturer-nav')%>
        <br>
        <br>
        <br></br>
        <table class="ui compact celled definition table">
            <h3>Your Allocated Coursework's</h3>
            <thead class="full-width">

                <tr>

                    <th>Allocation Name</th>
                    <th>Submitted Work</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Grade</th>
                    <th>Update / Add Grade</th>

                </tr>
            </thead>
            <tbody>
                <% if(record.length > 0){%>
                    <% record.forEach(function(allocation){%>
                        <tr>
                            <td>
                                <%=allocation.coursework_name %>
                            </td>
                            <td>
                                <a href="/submissions/<%=allocation.coursework %>">
                                    <%=allocation.coursework %><i class="download icon"></i>
                                </a>
                            </td>
                            <td>
                                <i class="address book icon"></i>
                                <%=allocation.first_name %>
                            </td>
                            <td>
                                <%=allocation.last_name %>
                            </td>
                            <td>
                                <%=allocation.grade %>%
                            </td>
                            <td>
                                <form class="ui form" method="post">
                                    <div class="field">
                                        <input type="hidden" name="id" value="<%=allocation.id %>" />
                                        <input type="text" name="grade" value="<%=allocation.grade %>" />
                                    </div>
                                    <div class="ui right floated">
                                        <button class="ui button blue" type="submit">Grade </button>
                                    </div>

                                </form>

                            </td>
                        </tr>
                        <%});%>
                            <%}%>
            </tbody>

        </table>
        <div class="ui inverted vertical footer segment" style="bottom: 0%; position: fixed; width: 100%;">

            <div class="ui center aligned container">
                <p>Cyber Academy 2022</p>
            </div>
        </div>
</body>

</html>