<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <%-include('sematic-ui')%>
</head>

<body style="background-color: whitesmoke;">
    <!-- sidebar -->
    <%-include('portal-nav')%>
        <br>
        <br>
        <br><br>
        <table class="ui compact celled definition table">
            <h3>Your Submitted Coursework's</h3>
            <thead class="full-width">

                <tr>

                    <th>Coursework Name</th>
                    <th>Grade</th>

                </tr>
            </thead>
            <tbody>
                <% if(result.length > 0){%>
                    <% result.forEach(function(allocation){%>
                        <tr>
                            <td>
                                <%=allocation.coursework_name %>
                            </td>
                            <td>
                                <%=allocation.grade %>%
                            </td>

                        </tr>
                        <%});%>
                            <%}%>
            </tbody>

        </table>
        <div class="ui inverted vertical footer segment" style="bottom: 0%; position: fixed; width: 100%;">

            <div class="ui center aligned container">
                <p>Cyber Academy 2022</p>
            </div>
        </div>
</body>

</html>